<div class="container">
  <div class="row">
    <div class="card col-md-8" style="width: 18rem;">
    <img src="<%= @recipe.r_image%>" class="card-img-top" alt="...">
      <div class="card-body">
          
      <%= form_for @recipe, url: {:action => 'edit'} do |f|%>
      
      <% hidden_field_tag :id, @recipe.id%>

      <div class="form-group">
      <%= label :title, :タイトル%>
      <%= f.text_field :title, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= label :exampleFormControlTextarea1, :材料%>
        <%= f.text_area :ingredient, class: "form-control"%>
      </div>
      
      <div class="form-group">
        <%= label :exampleFormControlTextarea1, :作り方%>
        <%= f.text_area :how_to, class: "form-control"%>
      </div>
      
      <div class="form-group">
        <%= label :exampleFormControlTextarea1, :画像%>
        <%= f.file_field :r_image, class: "form-control"%>
      </div>
      
      <label><%= f.radio_button :kind, "japanese"%>日本食</label>
      <label><%= f.radio_button :kind, "western"%>洋食</label>
      <label><%= f.radio_button :kind, "chinese"%>中華</label>
      <label><%= f.radio_button :kind, "other"%>その他</label>
      
      
      <%= submit_tag "投稿" %>
      <% end%>
      
        </div>
    </div>
    
  </div>
</div>
